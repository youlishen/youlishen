<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/wu_liu_order_layout"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:padding="36dp">

  <LinearLayout
    android:id="@+id/wu_liu_order_number_layout"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/wu_liu_order_number_hint"
      android:layout_width="100dp"
      android:layout_height="match_parent"
      android:gravity="center_vertical"
      android:text="@string/wuliu_search_order_number_title"
      android:textColor="@android:color/black"
      android:textSize="18dp" />

    <TextView
      android:id="@+id/wu_liu_order_number_content"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center_vertical"
      android:text="56655555515"
      android:textColor="@android:color/black"
      android:textSize="18dp" />
  </LinearLayout>

  <LinearLayout
    android:id="@+id/wu_liu_order_name_layout"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/wu_liu_order_name_hint"
      android:layout_width="100dp"
      android:layout_height="match_parent"
      android:gravity="center_vertical"
      android:text="@string/wuliu_search_order_name_title"
      android:textColor="@android:color/black"
      android:textSize="18dp" />

    <TextView
      android:id="@+id/wu_liu_order_name_content"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center_vertical"
      android:text="李白"
      android:textColor="@android:color/black"
      android:textSize="18dp" />
  </LinearLayout>

  <LinearLayout
    android:id="@+id/wu_liu_order_address_layout"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/wu_liu_order_address_hint"
      android:layout_width="100dp"
      android:layout_height="match_parent"
      android:gravity="center_vertical"
      android:text="@string/wuliu_search_order_address_title"
      android:textColor="@android:color/black"
      android:textSize="18dp" />

    <TextView
      android:id="@+id/wu_liu_order_address_content"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center_vertical"
      android:text="深圳市南山区粤海街道高新区总部大厦36楼"
      android:textColor="@android:color/black"
      android:textSize="18dp" />
  </LinearLayout>
</LinearLayout>