<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@android:color/white"
  tools:context="com.android.wuliu.LoginActivity">

  <ImageView
    android:id="@+id/iv_logo"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="50dp"
    android:src="@drawable/wu_liu_ic_logo" />

  <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/iv_logo"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="30dp"
    android:gravity="center"
    android:text="云拨号"
    android:textColor="@color/text_color_333333"
    android:textSize="20sp" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="200dp"
    android:orientation="vertical">

    <Button
      android:id="@+id/btn_login_by_phone"
      android:layout_width="match_parent"
      android:layout_height="45dp"
      android:layout_marginLeft="40dp"
      android:layout_marginRight="40dp"
      android:background="@drawable/btn_normal1_selector"
      android:onClick="onClick"
      android:text="@string/dialer_login_phone"
      android:textColor="@color/dialer_primary" />

    <Button
      android:id="@+id/btn_login_by_app"
      android:layout_width="match_parent"
      android:layout_height="45dp"
      android:layout_marginLeft="40dp"
      android:layout_marginTop="30dp"
      android:layout_marginRight="40dp"
      android:background="@drawable/btn_normal2_selector"
      android:onClick="onClick"
      android:text="@string/dialer_login_app"
      android:textColor="@android:color/white" />


  </LinearLayout>

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="40dp"
    android:orientation="horizontal">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/dialer_login_tips"
      android:textColor="@color/text_color_999999"
      android:textSize="12sp" />

    <TextView
      android:id="@+id/tv_service_agreement"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/dialer_service_agreement"
      android:textColor="@color/text_color_6DA6FF"
      android:textSize="12sp" />

  </LinearLayout>

</RelativeLayout>